{
	"name": "biolink-duduar",
	"author": {
		"name": "Duduar Deagle",
		"email": "imduduar@proton.me"
	},
	"type": "module",
	"license": "AGPL-3.0-only",
	"repository": {
		"type": "git",
		"url": "https://github.com/duduardeagle/biolink.git"
	},
	"private": true,
	"dependencies": {
		"@astrojs/react": "3.0.10",
		"@commitlint/cli": "18.6.1",
		"@duduardeagle/stylelint-config": "1.0.0",
		"@types/bun": "1.0.6",
		"@types/node": "20.11.19",
		"@types/react": "18.2.56",
		"@types/react-dom": "18.2.19",
		"@typescript-eslint/eslint-plugin": "7.0.2",
		"@typescript-eslint/parser": "7.0.2",
		"astro": "4.4.0",
		"autoprefixer": "10.4.17",
		"cssnano": "6.0.3",
		"cssnano-preset-advanced": "6.0.3",
		"eslint": "8.56.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-astro": "0.31.4",
		"gitmoji-cli": "9.1.0",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"postcss-import": "16.0.1",
		"postcss-mixins": "9.0.4",
		"postcss-nested": "6.0.1",
		"postcss-simple-vars": "7.0.1",
		"prettier": "3.2.5",
		"prettier-plugin-astro": "0.13.0",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"stylelint": "16.2.1"
	},
	"postcss": {
		"plugins": {
			"postcss-import": {},
			"postcss-mixins": {},
			"postcss-simple-vars": {},
			"postcss-nested": {},
			"autoprefixer": {},
			"cssnano": {
				"preset": "advanced"
			}
		}
	},
	"eslintConfig": {
		"env": {
			"browser": true,
			"node": true,
			"es2021": true
		},
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:astro/recommended",
			"eslint-config-prettier"
		],
		"plugins": [
			"@typescript-eslint"
		],
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "latest",
			"sourceType": "module"
		},
		"overrides": [
			{
				"files": [
					"*.astro"
				],
				"parser": "astro-eslint-parser",
				"parserOptions": {
					"parser": "@typescript-eslint/parser",
					"extraFileExtensions": [
						".astro"
					]
				}
			}
		],
		"rules": {
			"sort-imports": [
				"error",
				{
					"allowSeparatedGroups": true,
					"ignoreCase": false,
					"ignoreDeclarationSort": false,
					"ignoreMemberSort": false,
					"memberSyntaxSortOrder": [
						"all",
						"single",
						"multiple",
						"none"
					]
				}
			]
		}
	},
	"prettier": {
		"printWidth": 80,
		"useTabs": true,
		"singleQuote": false,
		"quoteProps": "as-needed",
		"jsxSingleQuote": false,
		"arrowParens": "avoid",
		"bracketSpacing": true,
		"bracketSameLine": true,
		"semi": false,
		"trailingComma": "none",
		"plugins": [
			"prettier-plugin-astro"
		]
	},
	"stylelint": {
		"extends": "@duduardeagle/stylelint-config"
	},
	"lint-staged": {
		"*.json": "prettier --check --plugin=prettier-plugin-astro",
		"*.md": "prettier --check --plugin=prettier-plugin-astro",
		"*.mdx": "prettier --check --plugin=prettier-plugin-astro",
		"*.js": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.cjs": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.mjs": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.jsx": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.ts": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.tsx": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.astro": [
			"prettier --check --plugin=prettier-plugin-astro",
			"eslint --quiet"
		],
		"*.css": [
			"prettier --check --plugin=prettier-plugin-astro",
			"stylelint"
		]
	},
	"gitmoji": {
		"autoAdd": false,
		"emojiFormat": "emoji",
		"scopePrompt": false,
		"messagePrompt": false,
		"capitalizeTitle": true,
		"gitmojisUrl": "https://gitmoji.dev/api/gitmojis"
	},
	"commitlint": {
		"rules": {
			"header-max-length": [
				2,
				"always",
				50
			],
			"header-full-stop": [
				2,
				"never",
				"."
			],
			"body-leading-blank": [
				2,
				"always",
				""
			],
			"body-full-stop": [
				1,
				"always",
				"."
			],
			"body-case": [
				2,
				"always",
				"sentence-case"
			]
		}
	},
	"scripts": {
		"prepare": "husky install",
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"start": "bun --bun dist/server/entry.mjs",
		"lint": "eslint . --ext .js,.cjs,.mjs,.jsx,.ts,.tsx,.astro",
		"prettier": "prettier . --check --plugin=prettier-plugin-astro",
		"prettier:fix": "prettier . --write --plugin=prettier-plugin-astro",
		"stylelint": "stylelint **/*.css",
		"stylelint:fix": "stylelint --fix **/*.css"
	}
}
