---
/* Import layout */
import Layout from "@layouts/Main.astro"

/* Import components */
import { Button } from "@components/Buttons"
import Card from "@components/Card"
import Container from "@components/Container"
import { ContentGroup } from "@components/Groups"
import Footer from "@components/Footer"
import { Image } from "astro:assets"
import Input from "@components/Input"
import {
	CopyIcon,
	GitHubIcon,
	LinkedInIcon,
	MastodonIcon,
	SendIcon,
	SimpleXIcon,
	TelegramIcon
} from "@components/Icons"

/* Import resources */
import ProfilePicture from "../images/duduar.jpeg"

/* Import styles */
import styles from "@styles/Home.module.css"
---

<Layout>
	<header>
		<Container>
			<Card className={styles["card--profile"]}>
				<ContentGroup className={styles["content-group--user-info"]}>
					<h1 class={styles["card--profile__username"]}>@duduardeagle</h1>
					<ContentGroup className={styles["content-group--career-info"]}>
						<span class={styles["card--profile__job-title"]}>
							Ingeniero de Software
						</span>
						<ul class={styles["card--profile__skills"]}>
							<li>💻 Web</li>
							<li>🎨 UI & UX</li>
						</ul>
					</ContentGroup>
				</ContentGroup>
				<p>
					¡Hola mundo! ✌🏽, soy un profesional independiente que crea soluciones
					digitales increíbles con pasión y tecnología de vanguardia 🚀.
				</p>
				<ul class={styles["card--profile__links-list"]}>
					<li>
						<a
							rel="noopener"
							href="https://linkedin.com/in/duduardeagle"
							title="Ir a mi perfil de LinkedIn">
							<LinkedInIcon />
						</a>
					</li>
					<li>
						<a
							rel="noreferrer"
							href="https://github.com/duduardeagle"
							title="Ir a mi perfil de GitHub">
							<GitHubIcon />
						</a>
					</li>
					<li>
						<a
							rel="me"
							href="https://masto.es/@duduardeagle"
							title="Sígueme en Mastodon">
							<MastodonIcon />
						</a>
					</li>
					<li>
						<a
							rel="noreferrer"
							href="https://t.me/duduardeagle"
							title="Contáctame por Telegram">
							<TelegramIcon />
						</a>
					</li>
					<li>
						<a
							rel="noreferrer"
							href="https://simplex.chat/contact#/?v=1-4&smp=smp%3A%2F%2FSkIkI6EPd2D63F4xFKfHk7I1UGZVNn6k1QWZ5rcyr6w%3D%40smp9.simplex.im%2FHXWrPtK34C8Mvgo6kRsmKS53vJHy8qFz%23%2F%3Fv%3D1-2%26dh%3DMCowBQYDK2VuAyEADfaj_vB7cuHyvJMFJuDaYKRxzEpMDLN5NXIaO9r3QmA%253D%26srv%3Djssqzccmrcws6bhmn77vgmhfjmhwlyr3u7puw4erkyoosywgl67slqqd.onion"
							title="Contáctame por SimpleX Chat">
							<SimpleXIcon />
						</a>
					</li>
				</ul>
				<ContentGroup className={styles["content-group--email-info"]}>
					<label for="email" class={styles["card--profile__contact-label"]}>
						📬 Contáctame
					</label>
					<Input
						id="email"
						name="email"
						type="email"
						value="hi@duduar.dev"
						disabled
					/>
					<ContentGroup className={styles["content-group--email-buttons"]}>
						<Button
							id="btnEmail"
							title="Copiar dirección de correo electrónico">
							<CopyIcon />
						</Button>
						<Button
							as="a"
							href="mailto:hi@duduar.dev"
							title="Enviar correo electrónico">
							<SendIcon />
						</Button>
					</ContentGroup>
				</ContentGroup>
				<Image
					src={ProfilePicture}
					class={styles["card--profile__picture"]}
					alt="Imagen de perfil de Duduar, realizada por computadora y con estilo Pixar; describe a un chico geek con lentes y peinado tipo Mohawk, viste una chaqueta de cuero y camiseta blanca y está sentado frente a una laptop, detrás tiene vista a través de una ventana de lo que parece ser una ciudad llena de edificios."
					width={128}
					height={128}
					loading="eager"
					quality={100}
				/>
			</Card>
		</Container>
	</header>

	<Footer />
</Layout>

<script>
	const btn = document.getElementById("btnEmail")
	const email = document.getElementById("email") as HTMLInputElement

	btn?.addEventListener("click", () => {
		navigator.clipboard.writeText(email?.value)
	})
</script>
